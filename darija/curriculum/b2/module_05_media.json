      "grammar": [
        {
          "rule": "Reporting News in Darija",
          "explanation": "Use '7sb lakhbar' (according to the news), 'tbyn blli' (it was revealed that), 'l-akhbar 9alat' (the news said).",
          "examples": [
            {
              "arabic": "حسب الأخبار، الحكومة غادي تدير تغييرات",
              "romanized": "7sb lakhbar, l7ukuma ghadi tdir tghiyirat",
              "english": "According to the news, the government will make changes"
            }
          ],
          "common_mistakes": [
            "Always cite sources when reporting news"
          ]
        },
        {
          "rule": "Passive Voice for News",
          "explanation": "News uses passive: 'tt9al' (it was said), 'tta3ln' (it was announced), 'tktb' (it was written).",
          "examples": [
            {
              "arabic": "تعلن اليوم بلي الثمن غادي ينزل",
              "romanized": "tt3ln lyoum blli ttmn ghadi ynzl",
              "english": "It was announced today that the price will decrease"
            }
          ],
          "common_mistakes": [
            "Passive is more common in news language than everyday Darija"
          ]
        },
        {
          "rule": "Expressing Reactions to News",
          "explanation": "'ma sd9t!' (I can't believe it!), 'wllah?' (really?), 'hadi kbira!' (this is big!), 'ma 3ndi m3aha' (I don't care about it).",
          "examples": [
            {
              "arabic": "وللاه؟ ما صدقت! هادي كبيرة!",
              "romanized": "wllah? ma sd9t! hadi kbira!",
              "english": "Really? I can't believe it! This is huge!"
            }
          ],
          "common_mistakes": [
            "Expressing reactions shows engagement in conversation"
          ]
        },
        {
          "rule": "Discussing Credibility",
          "explanation": "'mw99 fih' (trustworthy), 'ma 9ddsh ttw99 fih' (unreliable), 'fake news' (fake news), 'ms77 lkhbar' (verify the news).",

      "grammar": [
        {
          "rule": "Expressing Feelings with 'kan7ss b-'",
          "explanation": "'kan7ss b-' (I feel) + noun/adjective: 'kan7ss bl-fr7a' (I feel happiness), 'kan7ss brasi mrta7' (I feel at ease).",
          "examples": [
            {
              "arabic": "كنحس بالفرحة",
              "romanized": "kan7ss blffr7a",
              "english": "I feel happiness"

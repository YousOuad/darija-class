      "grammar": [
        {
          "rule": "Future Tense with 'ghadi'",
          "explanation": "'ghadi' + present tense verb for future: 'ghadi nsafr' (I will travel), 'ghadi nmshi' (I will go).",
          "examples": [
            {
              "arabic": "غادي نسافر الشهر الجاي",
              "romanized": "ghadi nsafr shshhr jjay",
              "english": "I will travel next month"
            }
          ],
          "common_mistakes": [
            "'ghadi' is invariable - it doesn't change for person"
          ]
        },
        {
          "rule": "Travel Prepositions",
          "explanation": "'l-' (to), 'mn' (from), 'f' (in/at): 'mshit l-Fas mn Casa' (I went to Fes from Casa).",
          "examples": [
            {
              "arabic": "مشيت من كازا لفاس فالتران",
              "romanized": "mshit mn casa l Fas fttran",
              "english": "I went from Casablanca to Fes by train"
            }
          ],
          "common_mistakes": [
            "Using 'ila' (MSA to) instead of 'l-' (Darija to)"
          ]
        },
        {
          "rule": "Duration with 'mn...7tta'",
          "explanation": "Express duration: 'mn + start + 7tta + end': 'mn ltnin 7tta ljm3a' (from Monday to Friday).",
          "examples": [
            {
              "arabic": "غادي نبقى من الثنين حتى الجمعة",
              "romanized": "ghadi nb9a mn ltnin 7tta ljm3a",
              "english": "I'll stay from Monday to Friday"
            }
          ],
          "common_mistakes": [
            "Confusing '7tta' (until) with 'l-' (to) for time durations"
          ]
        },
        {
          "rule": "Asking Permission: 'wash ymkn lia'",
          "explanation": "'wash ymkn lia' (can I) for polite requests: 'wash ymkn lia nshuf l-bit?' (can I see the room?).",
          "examples": [

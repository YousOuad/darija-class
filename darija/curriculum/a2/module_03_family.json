      "grammar": [
        {
          "rule": "Possessive Pronouns (Attached Suffixes)",
          "explanation": "Darija uses suffixes attached to nouns for possession: -i (my), -k (your-m), -k (your-f), -o/-h (his), -ha (her), -na (our), -kum (your-pl), -hum (their).",
          "examples": [
            { "arabic": "خويا (أخي)، خوك (أخوك)، خوه (أخوه)", "romanized": "khuya (my brother), khuk (your brother), khuh (his brother)", "english": "my brother, your brother, his brother" },
            { "arabic": "ختي، ختك، خته", "romanized": "khti, khtk, khto", "english": "my sister, your sister, his sister" }
          ],
          "common_mistakes": [
            "Confusing -o (his) with -ha (her)",
            "Using separate words like MSA 'ukht-ii' instead of Darija suffix 'khti'"
          ]
        },
        {
          "rule": "Possessive with 'dyal'",
          "explanation": "For nouns that don't easily take suffixes, use 'dyal' + pronoun: dyali (mine), dyalk (yours-m), dyalha (hers), dyalo (his), dyalna (ours), dyalkum (yours-pl), dyalhum (theirs).",

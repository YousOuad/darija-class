      "grammar": [
        {
          "rule": "Bargaining Language",
          "explanation": "Key phrases: 'ghali bzzaf' (too expensive), 'n9ss chwiya' (lower a bit), 'akhr tmn?' (final price?), 'ma ymknsh' (impossible/no way).",
          "examples": [
            {
              "arabic": "غالي بزاف! نقص شوية",
              "romanized": "ghali bzzaf! n9ss chwiya",
              "english": "Too expensive! Lower the price a bit"
            },
            {
              "arabic": "أشنو آخر ثمن؟",
              "romanized": "ashnu akhr tmn?",
              "english": "What's the final price?"
            }
          ],
          "common_mistakes": [
            "Starting with the seller's price - always counter-offer at about half"
          ]
        },
        {
          "rule": "Comparative Forms",
          "explanation": "To compare: ktar mn (more than), a9l mn (less than), b7al (like/same as). Adjective comparatives: kbr mn (bigger than), sghr mn (smaller than).",
          "examples": [
            {
              "arabic": "هادا غالي كتر من هاداك",
              "romanized": "hada ghali ktar mn hadak",
              "english": "This is more expensive than that one"
            },
            {
              "arabic": "هادا أرخص",
              "romanized": "hada arkhss",
              "english": "This is cheaper"
            }
          ],
          "common_mistakes": [
            "Using MSA comparative 'akbar' instead of Darija 'kbr'"
          ]
        },
        {
          "rule": "Demonstratives for Shopping",
          "explanation": "'hada' (this-m), 'hadi' (this-f), 'hadak' (that-m), 'hadik' (that-f), 'haduk' (those). Essential for pointing at items.",
          "examples": [
            {
              "arabic": "بشحال هادا؟ و هاداك؟",
              "romanized": "bsh7al hada? w hadak?",
              "english": "How much is this? And that one?"
            },
            {
              "arabic": "بغيت هادي، ماشي هاديك",
              "romanized": "bghit hadi, mashi hadik",
              "english": "I want this one, not that one"
            }
          ],
          "common_mistakes": [
            "Confusing 'hadi' (this-f) with 'hadik' (that-f)"
          ]
        },
        {
          "rule": "Expressing Quantity",
          "explanation": "bzzaf (a lot), chwiya (a little), kafi (enough), zid (more/add): 'zid wa7d' (add one more), 'kafi, shukran' (enough, thanks).",
          "examples": [
            {
              "arabic": "زيد شوية",
              "romanized": "zid chwiya",
              "english": "Add a little more"
            },
            {
              "arabic": "كافي، شكرا",
              "romanized": "kafi, shukran",
              "english": "That's enough, thank you"
            }
          ],
          "common_mistakes": [
            "'zid' can mean both 'add more' and 'continue'"
          ]
        },
        {
          "rule": "Color Adjectives for Shopping",
          "explanation": "Colors: k7l (black), byd (white), 7mr (red), khdhr (green), zr9 (blue), sfr (yellow). Feminine adds -a: k7la, byda, 7mra.",

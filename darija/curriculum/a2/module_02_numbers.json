            {
              "arabic": "ستة، سبعة، تمنية، تسعود، عشرة",
              "romanized": "stta, sb3a, tmnya, ts3ud, 3shra",
              "english": "Six, seven, eight, nine, ten"
            }
          ],
          "common_mistakes": [
            "Using MSA 'ithnan' instead of Darija 'jouj' for two",
            "Using MSA 'thalatha' instead of Darija 'tlata' for three"
          ]
        },
        {
          "rule": "Numbers 11-19 Pattern",
          "explanation": "Numbers 11-19 are formed by combining the unit with '-tash' (from 'tashar'): 7dash (11), tnash (12), tlttash (13), rb3tash (14), khmstash (15), stttash (16), sb3tash (17), tmntash (18), ts3tash (19).",
          "examples": [
            {
              "arabic": "حداش، طناش، تلطاش",
              "romanized": "7dash, tnash, tlttash",
              "english": "Eleven, twelve, thirteen"
            }

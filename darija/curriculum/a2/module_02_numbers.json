          "common_mistakes": [
            "Forgetting that 11 is '7dash' not 'wa7dtash'",
            "Mixing up 'tnash' (12) and 'tlttash' (13)"
          ]
        },
        {
          "rule": "Counting Objects with 'dyal'",
          "explanation": "When counting objects, use 'number + dyal + noun' or 'number + d + noun' for possessive counting.",
          "examples": [
            {
              "arabic": "تلاتة ديال الكتوبا",
              "romanized": "tlata dyal lktuba",
              "english": "Three books"

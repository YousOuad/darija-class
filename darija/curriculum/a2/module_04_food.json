      "grammar": [
        {
          "rule": "Expressing 'I want' with 'bghit'",
          "explanation": "'bghit' (I want) is one of the most useful verbs. Conjugation: bghit (I), bghiti (you), bgha (he), bghat (she), bghina (we), bghitu (you-pl), bghaw (they).",
          "examples": [
            { "arabic": "بغيت واحد القهوة", "romanized": "bghit wa7d l9hwa", "english": "I want a coffee" },
            { "arabic": "أشنو بغيتي؟", "romanized": "ashnu bghiti?", "english": "What do you want?" }
          ],
          "common_mistakes": ["Using 'urid' (MSA) instead of 'bghit' (Darija)"]
        },
        {
          "rule": "Expressing 'I like' with 'ka y3jbni'",
          "explanation": "'ka y3jbni' means 'I like' (literally: it pleases me). The thing liked is the subject: 'ka y3jbni latay' (I like tea = tea pleases me).",
          "examples": [
            { "arabic": "كيعجبني الأتاي", "romanized": "kay3jbni latay", "english": "I like tea" },
            { "arabic": "ما كيعجبنيش الحليب", "romanized": "ma kay3jbnish l7lib", "english": "I don't like milk" }
          ],
          "common_mistakes": ["Confusing the subject - 'atay' is the grammatical subject, not 'I'"]
        },
        {
          "rule": "'Give me' with '3tini'",
          "explanation": "'3tini' (give me) is the imperative of '3ta' (to give). Very common in shops and restaurants.",
          "examples": [
            { "arabic": "عطيني واحد الخبزة", "romanized": "3tini wa7d lkhobza", "english": "Give me one bread" },
            { "arabic": "عطيني جوج كيلو دالطماطم", "romanized": "3tini jouj kilo dttmatm", "english": "Give me two kilos of tomatoes" }
          ],
          "common_mistakes": ["Not using '3tini' - it's perfectly polite when followed by '3afak' or 'allah ykhllik'"]
        },
        {
          "rule": "Partitive 'dyal/d' with Food",
          "explanation": "Use 'dyal' or 'd' between quantity and food item: 'chwiya d-sukkar' (a little sugar), 'bzzaf d-l7m' (a lot of meat).",
          "examples": [
            { "arabic": "شوية ديال السكر", "romanized": "chwiya dyal ssukkar", "english": "A little sugar" },
            { "arabic": "بزاف ديال الماء", "romanized": "bzzaf dyal lma", "english": "A lot of water" }
          ],
          "common_mistakes": ["Omitting 'dyal/d' between quantity and noun"]
        },
        {
          "rule": "Negating Food Preferences",
          "explanation": "Use 'ma...sh' around the verb: 'ma bghitsh' (I don't want), 'ma kay3jbnish' (I don't like).",
          "examples": [
            { "arabic": "ما بغيتش اللحم", "romanized": "ma bghitsh ll7m", "english": "I don't want meat" },
            { "arabic": "ما كيعجبنيش الحوت", "romanized": "ma kay3jbnish l7ut", "english": "I don't like fish" }
          ],
          "common_mistakes": ["Only using 'ma' without the 'sh' suffix"]
        }
